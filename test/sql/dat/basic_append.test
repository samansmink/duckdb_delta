require parquet

require delta

require-env DAT_PATH

# Note: this table has 2 parquet files:
# - <file a>.snappy.parquet
#   - contains letters a,b,c
# - <file b>.snappy.parquet
# 	- contains letters d,e
mode skip

query I
SELECT count(*)
FROM delta_scan('${DAT_PATH}/out/reader_tests/generated/basic_append/delta')
----
5

query I
SELECT count(number)
FROM delta_scan('${DAT_PATH}/out/reader_tests/generated/basic_append/delta')
----
5

query III
SELECT *
FROM delta_scan('${DAT_PATH}/out/reader_tests/generated/basic_append/delta')
----
d	4	4.4
e	5	5.5
a	1	1.1
b	2	2.2
c	3	3.3

query I
